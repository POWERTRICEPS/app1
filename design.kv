#:kivy 1.11.1
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                id: "title_card"
                text: "Log in"
                font_size: '20sp'
            TextInput:
                id: "username"
                hint_text: "Username"
            TextInput:
                id: "password"
                hint_text: "Password"
                password: True
            Button:
                text: "Login"
                on_press: root.login()
        GridLayout:
            cols: 2
            Button:
                text: "Sign Up"
                on_press: 
                    root.sign_up()
                    root.manager.transition.direction ="right"
            Button:
                text: "Forgot password?"
<HomeScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "s up"
<SignUpScreen>:
    GridLayout: 
        cols: 1
        Label: 
            text: "Start your new account!"
        TextInput:
            id: username 
            hint_text: "Username"
        TextInput:
            id: password 
            hint_text: "Password"
        Button:
            text: "Create Account"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
    GridLayout:  
        Button:
            size_hint: 0.5, 0.5
            background_color: 0.1, 0.5, 0.6, 1
            pos: 0, 500
            text: "Go Back"
            on_release:
                app.root.current = 'login_screen'
                root.manager.transition.direction ="left"
                    
                 
                
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    HomeScreen:
        name: "home_screen"
    SignUpScreen:
        name: "sign_up_screen"

